{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/companyUpdate.schema.json",
    "type": "object",
    "properties": {
      "djName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "showName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "dayOfWeek":{
        "type": "integer",
        "maximum": 6,
        "minimum": 0
      },
      "showTime":{
          "type": "string",
          "format": "time"
      },
      "imgURL": {
        "type": "string",
        "format": "uri"
      },
      "description": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": []
  }